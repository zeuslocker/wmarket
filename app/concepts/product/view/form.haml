.container.nav-margin
  = form_for model, html: {multipart: true} do |f|
    .form-group
      = f.label :title
      = f.text_field :title, class: 'form-control'
    .form-group
      = f.label :desc
      = f.text_area :desc, rows: 8, class: 'form-control'
    .form-group
      = f.label :price
      = f.number_field :price, class: 'form-control'
    .form-group
      = f.label :avatar
      = f.file_field :avatar, class: 'form-control'
    .form-group
      = button_tag I18n.t('product.form.submit'), type: 'submit', class: 'btn btn-default'
